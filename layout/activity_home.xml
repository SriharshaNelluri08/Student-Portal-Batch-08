<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:id="@+id/drawyerlayout"
    tools:context=".home">
<com.google.android.material.navigation.NavigationView
    android:id="@+id/navgigationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:menu="@menu/menu_items"
    app:headerLayout="@layout/nav_head"
    android:layout_gravity="start"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="WELCOME!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="70dp"
        android:textSize="34sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/hometext"
        android:text="HOME"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="34sp"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">
    <include layout="@layout/activity_custom_tool_bar"/>
</LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"

                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/attendance"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/attendance"
                    android:scaleType="fitCenter"
                    android:background="@drawable/input_text_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/videoCard"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/assignment"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/as"
                    android:scaleType="fitCenter"
                    android:background="@drawable/input_text_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/docCard"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Analysis"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/ana"
                    android:scaleType="fitCenter"
                    android:background="@drawable/input_text_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analysis"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/videoCard"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/table"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/ttn"
                    android:scaleType="fitCenter"
                    android:background="@drawable/input_text_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TimeTable"
                    android:textAlignment="center"
                    android:textColor="#2196F3"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <ImageButton
        android:id="@+id/homeLogout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="320dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/logout"
        android:scaleType="fitEnd"
        android:src="@drawable/baseline_logout_24" />

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>